<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Card Game</title>
		<link rel="stylesheet" href="./css/style.css" />
		<link
			rel="shortcut icon"
			href="./images/fevicon.png"
			type="image/x-icon"
		/>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.3/socket.io.min.js"></script>
	</head>
	<body>
		<div id="playground">
			<div class="img-card left">
				<img src="./images/hiddenCard1.png" alt="player 1 cards" />
				<span class="player-name player-name1">Loki</span>
			</div>
			<div class="img-card top">
				<img src="./images/hiddenCard2.png" alt="player 1 cards" />
				<span class="player-name player-name3">Luck</span>
			</div>
			<div class="img-card right">
				<img src="./images/hiddenCard3.png" alt="player 1 cards" />
				<span class="player-name player-name3">Sonu</span>
			</div>
		</div>

		<button id="abcde">click me</button>

		<div id="actual-playground"></div>

		<div class="message" style="display: none">
			<h2 id="message">wdvvdc</h2>
		</div>

		<div id="place-bet-container" style="display: none">
			<div id="bolle">
				<input
					type="number"
					id="bolle-input"
					value="2"
					placeholder="enter your bet"
				/>
				<button id="bolle-submit">Place bet</button>
			</div>
		</div>

		<div id="score" style="display: none">
			<table id="curr">
				<tr>
					<th>a</th>
					<th>b</th>
					<th>c</th>
					<th>d</th>
				</tr>
				<tr>
					<td>0</td>
					<td>0</td>
					<td>0</td>
					<td>0</td>
				</tr>
			</table>

			<table id="history">
				<tr>
					<th>a</th>
					<th>b</th>
					<th>c</th>
					<th>d</th>
				</tr>
			</table>
		</div>

		<div id="cards"></div>

		<div id="screen1" >
			<h1 class="h1">Welcome to the game</h1>
			<h2 class="h2">Game Name - Minus</h2>

			<h2 id="players-online-container">
				Players Online - 
				<span id="players-online"><%= players.length %></span>
			</h2>

            <div id="players-name">
            <% for(let i=0;i<players.length;i++) { %>
                <h3><%= players[i].name %></h3>
            <% } %>
            </div>
            <% if(players.length < 4) { %>
                <h2 style="margin-top: 4%;">Enter your name to join the game</h2>
                <input id="player-name" type="text" autofocus placeholder="Enter Your Name" />
                <button id="start-game">Start Game</button>
            <% }else{ %>
                <h3>Sorry but room is already full</h3>
            <% } %>
			
		</div>

		<script
			src="https://code.jquery.com/jquery-3.6.0.min.js"
			integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
			crossorigin="anonymous"
		></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.1/gsap.min.js"></script>

		<script src="./js/index.js"></script>
	</body>
</html>
