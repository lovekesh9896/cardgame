	<body>

        <div id="playground">
            <div class="card">
				<span class="symbol">A</span>
				<span class="value">A</span>
			</div>
            <div class="card">
				<span class="symbol">B</span>
				<span class="value">B</span>
			</div>
            <div class="card">
				<span class="symbol">C</span>
				<span class="value">C</span>
			</div>
            <div class="card">
                <span class="symbol">D</span>
                <span class="value">D</span>
			</div>
        </div>

        <div class="message">
            <h2 id="message">wdvvdc</h2>
        </div>

        <div id="bolle">
            <input type="number" id="bolle-input" placeholder="enter your bet">
            <button id="bolle-submit">Place bet</button>
        </div>
        <div id="score">
            <table id="curr">
                <tr>
                    <th>a</th>
