                    <td>_</td>
                </tr>
            </table>

            <table id="history">
                <tr>
                    <th>a</th>
                    <th>b</th>
                    <th>c</th>
                    <th>d</th>
                </tr>
            </table>
        </div>

		<div id="cards">
            <div class="card">
				<span class="symbol"></span>
				<span class="value"></span>
			</div>
            <div class="card">
